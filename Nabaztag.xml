<grammar version="1.0" xml:lang="fr-FR" mode="voice" root="ruleNabaztag" xmlns="http://www.w3.org/2001/06/grammar" tag-format="semantics/1.0">
	<rule id="ruleNabaztag" scope="public">
		<tag>out.action=new Object(); </tag>
		
		<item weight="2">SARAH</item>
		<one-of>
			<item>fait dormir le lapin<tag>out.action.commande="dormir";</tag></item> 
			<item>le lapin est fatigué<tag>out.action.commande="dormir";</tag></item> 
			<item>réveille le lapin<tag>out.action.commande="reveil";</tag></item> 
			<item>redemarre le lapin<tag>out.action.commande="smallReboot";</tag></item> 
			<item>c'est la fete de qui<tag>out.action.commande="ephemeride";</tag></item> 

			<item>reboot le lapin<tag>out.action.commande="reboot";</tag></item> 
			<item>quel est le nom du lapin<tag>out.action.commande="name";</tag></item> 

			<item>le lapin est en colere<tag>out.action.commande="oreilles";out.action.param="colere";</tag></item> 
			<item>le lapin est heureux<tag>out.action.commande="oreilles";out.action.param="happy";</tag></item> 
			<item>le lapin se demande quoi<tag>out.action.commande="oreilles";out.action.param="question";</tag></item> 
			<item>le lapin est malade<tag>out.action.commande="oreilles";out.action.param="vase";</tag></item> 



		</one-of>
		<tag>out.action._attributes.uri="http://127.0.0.1:8080/sarah/Nabaztag";</tag>
	</rule>
</grammar>
